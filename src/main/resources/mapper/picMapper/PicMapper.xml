<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.join.TinyProgram.mapper.pic.PicMapper">

    <select id="getAll" resultType="com.join.TinyProgram.entity.pic.Pic">
        SELECT *
        FROM t_pic
        order by num
    </select>

    <insert id="addNew" >
        insert  into t_pic(url,intro,num)
        values (#{url},#{intro},#{num})
    </insert>

    <update id="update">
        update t_pic
        set url = #{url},intro = #{intro},num = #{num}
        where id = #{id}
    </update>

    <update id="add">
        update t_pic
        set num  = num + 1
        where num >= #{num}
    </update>

    <update id="minus">
        update t_pic
        set num = num -1
        where num > #{num}
    </update>

    <delete id="delete">
        delete from t_pic
        where id = #{id}
    </delete>

    <select id="getIdPre" resultType="java.lang.Integer">
        select auto_increment from information_schema.`TABLES`
        where table_name='t_pic'
    </select>

    <select id="getByRand" resultType="com.join.TinyProgram.entity.msg.Msg">
        select * from t_msg order by rand( ) limit 1
    </select>

</mapper>
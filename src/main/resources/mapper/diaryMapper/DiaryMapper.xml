    <update id="updateDiary">
    UPDATE t_diary
    SET title=#{diary.title},inside=#{diary.inside},picUrl=#{diary.picUrl},path=#{diary.path},date=#{diary.date}
    WHERE id=#{diary.id}
    </update>

    <insert id="addDiary">
    INSERT INTO t_diary
    (userId,title,inside,picUrl,path,date)
    VALUES (#{diary.userId},#{diary.title},
    #{diary.inside},#{diary.picUrl},#{diary.path},#{diary.date})
    </insert>
</mapper>